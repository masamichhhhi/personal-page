---
import type { Skill } from '@/types/resume';

interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold resume-section-title mb-6 pb-2 border-b border-gray-200">
    Skills
  </h2>
  <div class="grid md:grid-cols-2 gap-6">
    {skills.map((skill) => (
      <div>
        <h3 class="text-lg font-semibold resume-section-title mb-3">{skill.category}</h3>
        <div class="flex flex-wrap gap-2">
          {skill.items.map((item) => (
            <span class="resume-tag">
              {item}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
