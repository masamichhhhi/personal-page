---
import { formatDate } from '@utils/formatDate';
import TagList from './TagList.astro';

interface Props {
  title: string;
  slug: string;
  publishedAt: Date;
  summary: string;
  tags: string[];
}

const { title, slug, publishedAt, summary, tags } = Astro.props;
---

<article class="group">
  <a href={`/blog/${slug}`} class="block p-6 -mx-6 rounded-lg hover:bg-gray-50 transition-colors no-underline">
    <div class="flex flex-col gap-2">
      <time datetime={publishedAt.toISOString()} class="text-sm text-gray-500">
        {formatDate(publishedAt)}
      </time>
      <h2 class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
        {title}
      </h2>
      <p class="text-gray-600 line-clamp-2">
        {summary}
      </p>
      <TagList tags={tags} />
    </div>
  </a>
</article>
