---
import Navigation from './Navigation.astro';
---

<header class="border-b border-gray-200 dark:border-gray-700 no-print">
  <div class="container py-4">
    <div class="flex items-center justify-between gap-4">
      <a href="/" class="text-xl font-bold text-gray-900 dark:text-white hover:text-gray-700 dark:hover:text-gray-300 no-underline">
        masamichhhhi
      </a>
      <div class="flex items-center gap-3">
        <button
          type="button"
          class="inline-flex items-center gap-2 rounded-full border border-gray-200 dark:border-gray-700 px-3 py-1.5 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
          data-theme-toggle
          aria-pressed="false"
          aria-label="Toggle dark mode"
        >
          <span data-theme-label class="sr-only">Dark</span>
          <span class="theme-icon theme-icon-sun" aria-hidden="true">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
              <circle cx="12" cy="12" r="4" />
              <path stroke-linecap="round" d="M12 2v2M12 20v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M2 12h2M20 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
            </svg>
          </span>
          <span class="theme-icon theme-icon-moon" aria-hidden="true">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 14.5A8.5 8.5 0 1 1 9.5 3a6.5 6.5 0 0 0 11.5 11.5z" />
            </svg>
          </span>
        </button>
        <Navigation />
      </div>
    </div>
  </div>
</header>
