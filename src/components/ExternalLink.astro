---
import { Icon } from 'astro-icon/components';
import type { ExternalLink } from '@/types/links';

interface Props {
  link: ExternalLink;
}

const { link } = Astro.props;
---

<a
  href={link.url}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center justify-center p-4 bg-white text-gray-700 rounded-lg border border-gray-200 hover:text-blue-600 hover:border-blue-500 hover:shadow-md transition-all no-underline"
  aria-label={link.platform}
  title={link.platform}
>
  <Icon name={link.icon} class="w-8 h-8" />
</a>
