---
interface Props {
  tags: string[];
  linked?: boolean;
}

const { tags, linked = true } = Astro.props;
const cleanTags = tags.filter((tag) => tag && tag.trim().length > 0);

function formatTagName(tag: string): string {
  return tag
    .split('-')
    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}
---

{cleanTags.length > 0 && (
  <div class="flex flex-wrap gap-2">
    {cleanTags.map((tag) => (
      linked ? (
        <a
          href={`/blog/tag/${tag}`}
          class="blog-tag hover:opacity-80 transition-opacity"
        >
          {formatTagName(tag)}
        </a>
      ) : (
        <span class="blog-tag">
          {formatTagName(tag)}
        </span>
      )
    ))}
  </div>
)}
