---
import type { Publication } from '@/types/resume';

interface Props {
  publications: Publication[];
}

const { publications } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 pb-2 border-b border-gray-200">
    Publications
  </h2>
  <div class="space-y-6">
    {publications.map((pub) => (
      <div>
        <h3 class="text-xl font-semibold text-gray-900">
          {pub.url ? (
            <a href={pub.url} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 transition-colors">
              {pub.title}
            </a>
          ) : (
            pub.title
          )}
        </h3>
        <p class="text-gray-600">{pub.authors}</p>
        <p class="text-gray-500 text-sm mt-1 italic">{pub.conference}</p>
      </div>
    ))}
  </div>
</section>
